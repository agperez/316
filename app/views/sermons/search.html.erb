<% provide(:title, "Sermon Archive") %>
<% provide(:bodyid, "sermon_listing_page") %>
<div class="row">
  <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
    <center>
      <h2 id="index_heading">
        <em>
          Sermon Archive:
        </em>
      </h2>

      <%= form_tag search_path, method: :get, id: "sermon-search" do %>
        <p>
          <%= text_field_tag :query, params[:query] %>
          <%= submit_tag "Search", name: nil %>
        </p>
      <% end %>
      <%= will_paginate @ordered_sermons, :inner_window => 1 %>
    </center>
  </div>
      <div id="sermons">
        <%= render 'ordered' %>
      </div>
  </div>
</div>
