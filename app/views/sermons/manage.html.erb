<% provide(:title, "Manage Sermons") %>

<h1 id="archive_title">C316.<em>tv</em></h1>
<div class="row">
  <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 ">
    <h2 id="index_heading"><center><em>
      <% if Time.now.strftime("%Y-%m-%d") == @sermons.first.s_date.strftime("%Y-%m-%d")%>
        Today's Sermon:
      <% elsif Time.now.strftime("%Y-%m-%d") < @sermons.first.s_date.strftime("%Y-%m-%d") %>
        Next Sermon:
      <% else %>
        Latest Sermon:
      <% end %>
    </em></center></h2>
  </div>
  <div class="col-lg-4 col-lg-offset-4 col-md-4 col-md-offset-4 col-sm-8 col-sm-offset-2 col-xs-10 col-xs-offset-1">
  	<center>
		  <div class="btn-group">
			  <button type="button" class="btn btn-primary btn-md dropdown-toggle" data-toggle="dropdown">
			    <%= @sermons.first.s_date.strftime("%B %d") %>,
          <span id="arch_list_date"><em> <%= sermon_title(@sermons.first) %></em>
          </span>
          <span class="caret"></span>
			  </button>
			  <ul class="dropdown-menu" role="menu">
			    <li><%=link_to 'Edit', edit_sermon_path(@sermons.first)%></li>
			    <li><%=link_to 'Delete', @sermons.first, method: :delete,
                                    data: { confirm: "Seriously?" }%></li>
			  </ul>
			</div>
  	</center>
  </div>
  <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-12">
    <h2 id="index_heading"><center><em>Recent Sermons:</em></center><h2>
  </div>
  <div class="col-lg-8 col-lg-offset-2 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">
    <center>
      <% @sermons.drop(1).each do |sermon| %>
			  <div class="btn-group">
				  <button type="button" class="btn btn-default btn-xs dropdown-toggle" data-toggle="dropdown">
				    <%= sermon.s_date.strftime("%B %d") %>,
            <span id="arch_list_date"><em> <%= sermon_title(sermon) %></em>
            </span>
            <span class="caret"></span>
				  </button>
				  <ul class="dropdown-menu" role="menu">
				    <li><%=link_to 'Edit', edit_sermon_path(sermon)%></li>
				    <li><%=link_to 'Delete', sermon, method: :delete,
                                      data: { confirm: "Seriously?" }%></li>
				  </ul>
				</div>
			<% end %>
    </center>
  </div>
</div>
