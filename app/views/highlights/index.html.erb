<% provide(:bodyid, "sermon_listing_page") %>
<div class="row">
  <center><%= image_tag 'highlightsC316.png', id: "highlights_logo" %></center>

  <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">

    <div id="highlights" class="sort_paginate_ajax">
      <%= render 'highlights' %>
    </div>
    <br />
    <% if signed_in? %>
      <% if current_user.admin?  %>
        <%= link_to "Create Highlight", new_highlight_path, type: "button", class: "btn btn-primary" %>
      <% end %>
    <% end %>
  </div>
</div>
<br />
