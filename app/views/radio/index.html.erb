<% provide(:bodyid, "sermon_listing_page") %>
<div class="row">
  <center><%= image_tag 'OutlawRadio.png', id: "highlights_logo" %></center>

  <div class="col-lg-6 col-lg-offset-3 col-md-6 col-md-offset-3 col-sm-6 col-sm-offset-3 col-xs-10 col-xs-offset-1">

    <% unless @media.empty? %>
      <div id="media" class="sort_paginate_ajax">
        <%= render 'media' %>
      </div>
    <% end %>
    <br />
    <% if signed_in? %>
      <% if current_user.admin?  %>
        <%= link_to "Create Medium", new_radio_path, type: "button", class: "btn btn-primary" %>
      <% end %>
    <% end %>
  </div>
</div>
<br />
