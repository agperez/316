
<div class="col-lg-8 col-lg-offset-2">
  <center>
    <% if signed_in? %>
      <% if current_user.admin?  %>
        <%= link_to '(Edit)', edit_radio_path(@medium) %>
        <%= link_to '(delete)', radio_path, method: :delete %>
      <% end %>
    <% end %>
  </center>
</div>

<div class="col-lg-12" style="float: left;">
  <a href="https://twitter.com/share" class="twitter-share-button" data-text="<%= @medium.title %>" data-via="calvary316" data-size="large" data-url="<%= radio_url %>" data-count="none" data-hashtags="OutlawRadio">Tweet</a>
</div>
<br />
<h2>
  <div class="book-title">
    <strong><center><%= @medium.title %></center></strong>
  </div>
</h2>
<center>
  <audio controls>
    <source src="<%= @medium.audio %>" type="audio/mpeg">
  </audio>
</center>
<div class="col-sm-8 col-sm-offset-2">
  <p>
    <%= simple_format(@medium.outline) %>
  </p>
</div>


<br />

