<div class="row">
	<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
		<div class="dash_button btn-group">
		  <button type="button" class="btn btn-danger dropdown-toggle" data-toggle="dropdown">
		    Create <span class="caret"></span>
		  </button>
		  <ul class="dropdown-menu" role="menu">
		    <li><%= link_to "New Team", new_team_path %></li>
		    <li><%= link_to "New Role", new_role_path %></li>
		    <li><%= link_to "New User", new_user_path %></li>
		  </ul>
		</div>
	</div>	
	<div class="col-lg-10 col-md-12 col-sm-12 col-xs-12">
		<h1 class="dash_heading">Current Teams</h1>
	</div>
	<% @teams.each do |team| %>
		<div class="dash_list col-lg-4 col-md-4 col-sm-6 col-xs-12">
			<h2><%= link_to team.name, edit_team_path(team) %></h2>
			<% if team.users.length == 0 %>
				<span style="color: #d9534f; font-style: italic;">(No Users Assigned)</span>
			<% else %>
				<% team.users.each do |user| %>
					<div class="dash_names"><%= user.name %></div>
				<% end %>
			<% end %>
		</div>
	<% end %> 
</div>

<hr class="divider">

<div class="row">
	<div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
		<h1 class="dash_heading">Current Roles</h1>
	</div>
	<% @roles.each do |role| %>
		<div class="dash_list col-lg-4 col-md-4 col-sm-6 col-xs-12">
			<h2><%= link_to role.name, edit_role_path(role) %></h2>
			<div class="color_line" style="background-color: <%=role.color%>;"></div>
			<% role.users.each do |user| %>
				<div class="dash_names"><%= user.name %></div>
			<% end %>
		</div>
	<% end %> 
</div>

<hr class="divider">

<% @users.each do |user| %>
	<%= form_for user do |f| %>
		<div class="col-lg-4 col-md-4 col-sm-6 col-sm-12">
			<h3><%= user.name %></h3>
			<div class="form-group">
				<%= f.label "Role:" %>
				<%= f.collection_select :role_id, Role.all, :id, :name, {}, {class: "form-control"} %>
			</div>
			<div class="form-group">
				<%= f.label "Team:" %>
				<%= f.collection_select :team_id, Team.all, :id, :name, {}, {class: "form-control"} %>
			</div>
			<%= f.hidden_field :user_id, value: user.id %>
			<div class="actions">
			<%= f.submit "Update" %> 
			</div>
		</div>
	<% end %>
<% end %>	

