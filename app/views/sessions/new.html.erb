<% provide(:title, "Sign in") %>

<div class="container">
  <div class="row">
    <div class="col-md-4 col-md-offset-4">
      <h1><em>Sign in</em></h1>
      <%= form_for(:session, url: sessions_path) do |f| %>
        <div class="form-group">
          <%= f.label :email %>
          <%= f.text_field :email, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :password %>
          <%= f.password_field :password, class: "form-control" %>
        </div>
        <%= f.submit "Sign in", class: "btn btn-large btn-primary" %>
        <%= link_to "Sign up", signup_path, class: "btn btn-large btn-primary" %>
      <% end %>
    </div>
    <div class="col-md-4 col-md-offset-4">
      <div class="Andy">
        <B><span style="color: #970000;">Hello! Remember, if you serve regularly at church, you already have an account!</span></b><br>
        <br>
        Also, if you have never logged in before, your password is "faithfulness". Also you should change your password ;)<br>
        <br>
        -Andy<br>
        <br>
        P.S. - If you have any problems, issues, or bugs, please send me an email: agperez@gmail.com
      </div>
    </div>
  </div>
</div>
