<% provide(:title, @user.first_name + ' ' + @user.last_name) %>
<% provide(:bodyid, 'profile_body') %>
<% provide(:containerid, 'profile_container') %>

<div class="profile_header" style="background-image: url('<%= @user.avatar.url(:square_blur) %>');">
  <div class="profile_title">
    <% if @user.avatar_file_size? %>
    <div class="profile_picture">
      <%= image_tag @user.avatar.url(:medium) %>
    </div>
    <% elsif @user.facebook? %>
    <div class="profile_picture">
      <%= image_tag "https://graph.facebook.com/"+ @user.facebook + "/picture?width=275&height=275" %>
    </div>
    <% end %>
    <div class="profile_text" <% unless @user.avatar_file_size? || @user.facebook? %>style="margin: 0;"<% end %>>
      <div class="profile_name"><%= @user.first_name + ' ' + @user.last_name %></div>
      <div class="profile_info"><%= @user.email %></div>
    </div>

    <div class="clear"></div>
    <% if @user.phone? || @user.address1? || @user.city? %>
    <div class="profile_boxes">
      <ul>
        <li>
          <% if @user.phone? %>
          <span class="profile_phone"><%= @user.phone %></span>
          <% end %>
          <% if @user.address1? %>
            <%= @user.address1 %>
          <% end %>
          <% if @user.city? %>
            <br><%= @user.city %>,
          <% end %>
          <% if @user.state? %>
            <%= @user.state %>
          <% end %>
          <% if @user.zip? %>
            <%= @user.zip %>
          <% end %>
        </li>
      </ul>
      <div class="clear"></div>
    </div>
    <% end %>
  </div>
</div>
