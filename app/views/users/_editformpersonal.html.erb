<script>
  jQuery(function($) {
    $("#phone").mask("(999) 999-9999",{placeholder:" "});
  })
</script>

<%= form_for(@user) do |f| %>
  <% if @user.errors.any? %>
    <div id="error_explanation">
      <div class="alert alert-error">
        The form contains <%= pluralize(@user.errors.count, "error") %>.
      </div>
      <ul>
      <% @user.errors.full_messages.each do |msg| %>
        <li>* <%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

<div class="row">
    <div class="form-group col-lg-6">
      <%= f.label :gender %>
      <%= f.text_field :gender, class: "form-control" %>
    </div>
    <div class="form-group col-lg-6">
      <%= f.label :birth_date %>
      <%= f.date_field :birth_date, class: "form-control" %>
    </div>
    <div class="form-group col-lg-6">
      <%= f.label :phone_number, "Phone Number" %>
      <%= f.telephone_field :phone, class: "form-control" %>
    </div>
    <div class="form-group col-lg-6">
      <%= f.label :address_1 %>
      <%= f.text_field :address1, class: "form-control" %>
    </div>
    <div class="form-group col-lg-6">
      <%= f.label :city %>
      <%= f.text_field :city, class: "form-control" %>
    </div>
    <div class="form-group col-lg-6">
      <%= f.label :state %>
      <%= f.text_field :state, class: "form-control" %>
    </div>
    <div class="form-group col-lg-6">
      <%= f.label :zip %>
      <%= f.telephone_field :zip, class: "form-control" %>
    </div>
    <div class="form-group col-lg-6">
      <%= f.label :spouse, "Spouse's Name" %>
      <%= f.text_field :spouse, class: "form-control" %>
    </div>
    <div class="form-group col-lg-6">
      <%= f.label :facebook %><br><font color='#999'>Example: https://www.facebook.com/<span style="background-color: #FAFA9A">john.doe123</span></font>
      <%= f.text_field :facebook, class: "form-control", autofocus: true, placeholder: 'john.doe123' %>
    </div>
    <div class="form-group col-lg-6">
      <%= f.label :twitter %><br><font color='#999'>Example: https://twitter.com/<span style="background-color: #FAFA9A">johndoe</span></font>
      <%= f.text_field :twitter, class: "form-control", autofocus: true, placeholder: '@johndoe' %>
    </div>
    <div class="row">
      <div class="col-lg-12">
        <center><%= f.submit @type, class: "btn btn-large btn-primary col-lg-2 col-lg-offset-5" %></center>
      </div>
    </div>
<% end %>
</div>
